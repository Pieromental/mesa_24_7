FROM php:8.1-fpm

# ğŸ§© Instala extensiones necesarias
RUN apt-get update && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg-dev \
    libonig-dev \
    libxml2-dev \
    zip unzip curl git \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd

# ğŸ“‚ Establece el directorio de trabajo
WORKDIR /var/www

# ğŸ§  Copia Composer desde la imagen oficial
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# ğŸ“‚ Copia todo el proyecto (incluyendo artisan)
COPY . .

# ğŸ” Permisos
RUN chown -R www-data:www-data /var/www \
    && chmod -R 775 /var/www/storage

# ğŸ“¦ Ahora sÃ­: Instala dependencias
RUN composer install --optimize-autoloader --no-dev

# ğŸš€ Comando de inicio
CMD ["php-fpm"]
